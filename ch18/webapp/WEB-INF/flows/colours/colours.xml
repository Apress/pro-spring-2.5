<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
       
    <view-state id="start" view="events/index">
      <transition on="red" to="red" />
      <transition on="blue" to="blue" />
      <transition on="green" to="green" />
      <transition on="yellow" to="yellow" />
    </view-state>
 
 
    <view-state id="red" view="events/red" popup="true"></view-state>
    
    <view-state id="blue" view="events/blue"></view-state>
    
    <view-state id="green" view="events/green"></view-state>
    
    <view-state id="yellow" view="events/index"></view-state>
        
</flow>